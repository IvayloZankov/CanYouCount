<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="100dp"
    android:layout_marginHorizontal="48dp"
    tools:context=".SettingsFragment">

    <ImageView
        android:id="@+id/imageViewSettingsBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/settings_background_descr"
        android:scaleType="fitXY"
        android:src="@drawable/button_round_settings">
    </ImageView>

    <ImageView
        android:id="@+id/imageViewCloseSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_cross"
        android:padding="12dp"
        android:layout_gravity="end"
        >

    </ImageView>

    <LinearLayout
        android:id="@+id/linearTitle"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/settings_username"
            android:gravity="center"
            android:textSize="25sp"
            android:paddingVertical="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/ic_stroke_background"
            android:textColor="?attr/colorOnPrimary"
            />
        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            tools:text="counter359567"
            android:textSize="16sp"
            android:theme="@style/MyEditTextTheme"
            android:imeOptions="actionDone"
            android:longClickable="false"
            android:inputType="text"
            android:textColor="?attr/colorPrimaryVariant"
            >

        </EditText>
        <TextView
            android:id="@+id/textViewDifficulty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/settings_difficulty_select"
            android:gravity="center"
            android:textSize="25sp"
            android:paddingVertical="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/ic_stroke_background"
            android:textColor="?attr/colorOnPrimary"
            />
        <RadioGroup
            android:id="@+id/radioGroupDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <RadioButton
                android:id="@+id/radioButtonEasy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_radio_easy"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimaryVariant"
                app:buttonTint="?attr/colorPrimaryVariant"
                >
            </RadioButton>
            <RadioButton
                android:id="@+id/radioButtonMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_radio_medium"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimaryVariant"
                app:buttonTint="?attr/colorPrimaryVariant"
                >
            </RadioButton>
            <RadioButton
                android:id="@+id/radioButtonHard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_radio_hard"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimaryVariant"
                app:buttonTint="?attr/colorPrimaryVariant"
                >
            </RadioButton>
        </RadioGroup>
        <TextView
            android:id="@+id/textViewReset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/settings_reset_game"
            android:gravity="center"
            android:textSize="25sp"
            android:paddingVertical="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/ic_stroke_background"
            android:textColor="?attr/colorOnPrimary"
            />
    </LinearLayout>

</FrameLayout>